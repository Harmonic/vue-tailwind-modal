{
	"name": "vue-tailwind-modal",
	"version": "1.0.7",
	"description": "A modal window for Vue using Tailwind CSS.",
	"main": "./dist/vue-tailwind-modal.common.js",
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"build-bundle": "vue-cli-service build --target lib --name vue-tailwind-modal ./src/VueTailwindModal.vue"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/harmonic/vue-tailwind-modal.git"
	},
	"keywords": [
		"Modal",
		"Vue",
		"Tailwind",
		"CSS"
	],
	"author": "Craig Harman",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/harmonic/vue-tailwind-modal/issues"
	},
	"homepage": "https://github.com/harmonic/vue-tailwind-modal#readme",
	"private": false,
	"devDependencies": {
		"@vue/cli-plugin-babel": "^4.5.13",
		"@vue/cli-plugin-eslint": "^4.5.13",
		"@vue/cli-service": "^4.5.13",
		"babel-eslint": "^10.1.0",
		"css-loader": "^3.6.0",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"vue": "^2.6.14 || ^3.1.4",
		"vue-loader": "^15.9.7",
		"vue-style-loader": "^4.1.3",
		"vue-template-compiler": "^2.6.14",
		"webpack": "^4.46.0"
	},
	"files": [
		"dist/*",
		"src/*",
		"public/*",
		"*.json",
		"*.js"
	],
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"dependencies": {
		"tailwindcss": "^1.9.6"
	}
}
