{
  "name": "vue-tailwind-modal",
  "version": "0.0.7",
  "description": "A modal window for Vue using Tailwind CSS.",
  "main": "./dist/vue-tailwind-modal.common.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-bundle": "vue-cli-service build --target lib --name vue-tailwind-modal ./src/VueTailwindModal.vue"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harmonic/vue-tailwind-modal.git"
  },
  "keywords": [
    "Modal",
    "Vue",
    "Tailwind",
    "CSS"
  ],
  "author": "Craig Harman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/harmonic/vue-tailwind-modal/issues"
  },
  "homepage": "https://github.com/harmonic/vue-tailwind-modal#readme",
  "private": false,
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "babel-eslint": "^10.0.1",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.35.0"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "tailwindcss": "^1.0.4"
  }
}
